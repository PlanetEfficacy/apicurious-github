<!DOCTYPE html>
<html>
  <head>
    <title>GithubApicurious</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="container">

      <div class="user-area">
        <% if current_user %>
          <h4>Welcome <%= current_user.username %></h4>
          <%= link_to "Logout", logout_path, class: "btn btn-default"%>
        <% else %>
          <%= link_to "Sign in with GitHub", github_login_path, class: "btn btn-default"%>
        <% end %>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
